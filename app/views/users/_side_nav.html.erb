<!-- Side nav left -->
<aside class="aside-left col-2 pr-0 py-2">
  <!-- Logged user -->
  <div class="logged-user p-3">
    <div class="logged-user-details d-flex align-items-center mb-0">
    <%= image_tag user_image(current_user), class: 'rounded avatar-big' %>
      <h3 class="logged-user-name font-14 pl-2 mb-0">
        <%= link_to current_user.fullname, user_path(current_user) %>
        <%= link_to 'Sign out', sign_out_path, class: 'text-danger font-12 d-block' %>
      </h3>
    </div>

    <div class="logged-user-social row text-center">
      <div class="col-6 py-4">
        <p class="logged-user-social-count mb-0 h5"><%= current_user.followings.size %></p>
        <p class="logged-user-social-type font-12 mb-0">Following</p>
      </div>
      <div class="col-6 py-4">
        <p class="logged-user-social-count mb-0 h5"><%= current_user.followers.size %></p>
        <p class="logged-user-social-type font-12 mb-0">Followers</p>
      </div>
    </div>
  </div>

  <nav class="nav-left pl-3">
    <ul class="nav-left-items list-unstyled mb-0">
      <li class="nav-left-item py-2">
        <%= link_to root_path do %>
          <%= fa_icon "home" %> HOME 
        <% end %>
      </li>
      <li class="nav-left-item py-2">
        <%= link_to edit_user_path(current_user) do %>
          <%= fa_icon "user" %> PROFILE 
        <% end %>
      </li>
    </ul>
  </nav>

    <!-- Following -->
  <div class="followed-by pl-2">
    <p class="followed-by-title mb-0 text-muted font-weight-bold py-3">FOLLOWING</p>

    <div class="followed-by-container">
      <% current_user.followed_users.each do |follower| %>
        <article class="followed-by d-flex align-items-center justify-content-between py-2">
          <div class="followed-by-item d-flex align-items-center justify-content-between">
            <%= image_tag user_image(follower), class: 'avatar rounded-circle' %>
            <div class="followed-by-details pl-2">
              <h5 class="followed-by-name font-14 text-dark mb-0"><%= link_to follower.fullname, user_path(follower) %></h5>
              <p class="followed-by-username font-12 text-gray mb-1">@<%= follower.username %></p>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</aside>