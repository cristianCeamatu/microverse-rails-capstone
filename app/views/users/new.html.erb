<section class="sign-up">
  <h1>Create a new User</h1>
  <p>Please fill in all the required fields below</p>

  <div class="sign-up-form">
    <%= simple_form_for @user do |f| %>
      <%= f.input :username, label: 'Your username', hint: '2-20 chars allowed' %>
      <%= f.input :fullname, label: 'Full name',  hint: '2-30 chars allowed' %>

      <div class="row">
        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :photo, 'Your profile picture' %>
              <%= f.file_field :photo, label: 'Your profile picture'  %>
            </div>

            <div class="form-group">
              <%= f.label :cover_image, 'Your cover image' %>
              <%= f.file_field :cover_image, label: 'Your cover image'  %>
            </div>
        </div>
      </div>
      <%= f.button :submit, 'Create account!' %>
    <% end %>
    <p>Alreade have an account? <%= link_to 'Sign_in', sign_in_path %></p>
  </div>
</section>
