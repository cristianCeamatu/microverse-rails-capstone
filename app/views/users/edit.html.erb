<div class="row mr-0">
  <!-- Side nav left -->
  <aside class="aside-left col-2 pr-0 py-2">
    <%= render 'users/side_nav' %>
  </aside>

  <!-- Main content -->
  <main class="col-10 pr-0">
    <div class="row mr-0">
      <%= render 'users/top_nav' %>
    </div>

    <!-- Main content section -->
    <div class="main-content-feed row mr-0">
      <div class="col-9 px-0 border-right">
        <%= render 'form', user: @user, button_text: 'Update profile' %>
      </div>
      
      <!-- Main aside right -->
      <aside class="main-content-aside col-3">
        <%= render 'user_show_aside', user: @user %>
      </aside>
    </div>
  </main>
</div>
