<div class="sign-up-form col-12">
  <%= form_errors(user) %>

  <%= simple_form_for user do |f| %>
    <div class="form-group">
      <%= f.label :username, 'Username *', class: 'h6' %>
      <%= f.input_field :username, hint: '2-20 chars allowed', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :fullname, 'Full name *', class: 'h6' %>
      <%= f.input_field :fullname, hint: '2-30 chars allowed', class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.label :photo, 'Your profile picture (optional)', class: 'h6 d-block' %>
      <%= f.file_field :photo, class: 'border shadow-sm' %>
      <%= user_photo_preview(user) %>
    </div>

    <div class="form-group text-center">
      <%= f.label :cover_image, 'Your cover image (optional)', class: 'h6 d-block' %>
      <%= f.file_field :cover_image, class: 'border shadow-sm' %>
      <%= user_cover_image_preview(user) %>
    </div>

    <%= f.button :submit, button_text, class: 'btn btn-primary btn-block mt-3' %>
  <% end %>
</div>