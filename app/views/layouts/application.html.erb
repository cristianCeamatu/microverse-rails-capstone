<!DOCTYPE html>
<html>
  <head>
    <title>Bible talks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.png' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-success alert-dismissable text-center rounded mb-0 shadow-lg") do %>
        <%= value %>
        <button type="button" class="close ml-3 text-danger h3" data-dismiss="alert" aria-hidden="true">&times;</button>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
