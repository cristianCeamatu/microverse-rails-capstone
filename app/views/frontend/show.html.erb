<div class="row">
  <!-- Side nav left -->
  <aside class="aside-left border col-2">
    <!-- Logged user -->
    <div class="logged-user">
      <div class="logged-user-details">
        <%= image_tag 'avatar.jpg' %>
        <h3 class="logged-user-name">Cristian Ceamatu Viorel</h3>
      </div>

      <div class="logged-user-social row">
        <div class="col-6">
          <p class="logged-user-social-count">184</p>
          <p class="logged-user-social-type">Following</p>
        </div>
        <div class="col-6">
          <p class="logged-user-social-count">184</p>
          <p class="logged-user-social-type">Followers</p>
        </div>
      </div>
    </div>

    <nav class="nav-left">
      <ul class="nav-left-items">
        <li class="nav-left-item"><%= link_to 'HOME', root_path %></li>
        <li class="nav-left-item"><%= link_to 'PROFILE', root_path %></li>
      </ul>
    </nav>
  </aside>

  <!-- Main content -->
  <main class="border col-10">
    <div class="row">
      <!-- Main content top navigation -->
      <nav class="top-nav col-12">
        <ul class="nav-top-left">
          <li class="nav-top-left-item"><%= link_to 'TW', root_path %></li>
        </ul>

        <ul class="nav-top-right">
          <li class="nav-top-right-item"><%= link_to 'TW', root_path %></li>
          <li class="nav-top-right-item"><%= link_to 'TW', root_path %></li>
          <li class="nav-top-right-item"><%= link_to 'TW', root_path %></li>
          <li class="nav-top-right-item"><%= link_to 'TW', root_path %></li>
        </ul>
      </nav>
    </div>

    <!-- Main content section -->
    <div class="main-content-feed row">
      <section class="opinions col-9">
        <div class="showcase">
          <%= image_tag 'placeholder.jpg' %>
        </div>
        <ul class="nav nav-tabs">
          <li class="active"><a href="#">TALKS</a></li>
          <li><a href="#">PHOTOS</a></li>
          <li><a href="#">FOLLOWING</a></li>
          <li><a href="#">FOLLOWERS</a></li>
          <li><a href="#">FAVORITES</a></li>
          <li><a href="#">LISTS</a></li>
        </ul>

        <!-- New opinion form -->
        <%= simple_form_for(@opinion, class: 'd-flex') do |f| %>
          <h4>Share Bible Talk with Cristian Ceamatu</h4>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-group">
            <%= f.input :text, label: false, class: 'form-control' %>
          </div>

          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>

        <!-- User Opinions feed -->
        <div class="user-feed">
          <div class="user-feed-title">
            ALL BIBLE TALKS
          </div>

          <div class="user-feed-container">
            <article class="user-feed-item">
              <%= image_tag 'avatar.jpg' %>
              <div class="user-feed-item-details">
                <div class="user-feed-item-header">
                  <h5 class="user-feed-item-author">Miley Ray Cyrus</h5>
                  <p class="user-feed-item-date">23 Jan</p>
                </div>
                <p class="user-feed-item-text">Here’s a quick example to demonstrate Bootstrap’s form styles. Keep reading for documentation on required classes, form layout, and more.</p>
              </div>
            </article>
          </div>
        </div>
      </section>

      <!-- Main aside right -->
      <aside class="main-content-aside col-3">
        <!-- Aside user profile -->
        <div class="user-profile">
          <ul class="user-profile-actions">
            <li>
              <div class="user-follow-form">
                <%= form_with(url: followings_path, local: true) do |form| %>
                  <div>
                    <%= form.hidden_field :followed_id, value: 2 %>
                    <div class="actions">
                      <%= form.submit '+', class: 'btn btn-success h3' %>
                    </div>
                  </div>
                <% end %>
              </div>
            </li>
            <li><%= image_tag 'avatar.jpg' %></li>
            <li>
              <div class="user-unfollow-form">
                <%= form_with(model: @following, url: following_path({id: 1}), method: 'delete', local: true) do |form| %>
                  <div>
                    <%= form.hidden_field :followed_id, value: 1 %>
                    <div class="actions">
                      <%= form.submit 'X', class: 'btn btn-danger h3' %>
                    </div>
                  </div>
                <% end %>
              </div>
            </li>
          </ul>

          <div class="user-profile-header">
            <h3>MILEY RAY CYRUS</h3>
            <p>@MileyCyrus</p>
          </div>

          <ul class="user-profile-social">
            <li><p>6,542</p><p>Talks</p></li>
            <li><p>323</p><p>Following</p></li>
            <li><p>23</p><p>Followers</p></li>
          </ul>
        </div>

        <!-- Followed by -->
        <div class="followed-by">
          <h5 class="followed-by-title">FOLLOWED BY</h5>

          <div class="followed-by-container">
            <article class="followed-by">
              <div class="followed-by-item">
                <%= image_tag 'avatar.jpg' %>
                <div class="followed-by-details">
                  <h5 class="followed-by-name">Miley Ray Cyrus</h5>
                  <p class="followed-by-username">@Miley Ray Cyrus</p>
                </div>
              </div>

              <div class="user-follow-form">
                <%= form_with(url: followings_path, local: true) do |form| %>
                  <div>
                    <%= form.hidden_field :followed_id, value: 2 %>
                    <div class="actions">
                      <%= form.submit '+', class: 'btn btn-success h3' %>
                    </div>
                  </div>
                <% end %>
              </div>
            </article>
          </div>
        </div>
      </aside>
    </div>
  </main>
</div>