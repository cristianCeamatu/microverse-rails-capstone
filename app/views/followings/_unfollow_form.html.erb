<div class="user-unfollow-form">
  <%= form_with(model: @following, url: following_path(user), method: 'delete', local: true) do |form| %>
    <div>
      <%= form.hidden_field :followed_id, value: user.id %>
      <div class="actions">
        <%= form.submit 'X', class: 'btn btn-danger h3' %>
      </div>
    </div>
  <% end %>
</div>